@inherits LayoutComponentBase

<div class="layout-wrapper">
    <!-- 1. The hidden checkbox that maintains toggle state -->
    <input type="checkbox" id="sidebar-toggle" class="sidebar-toggle-input" />
    <RadzenLayout>
        <RadzenHeader>
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
                @* This label "clicks" the checkbox for us *@
                <label for="sidebar-toggle" class="rz-p-2 rz-display-flex rz-cursor-pointer custom-toggle-btn">
                    <RadzenIcon Icon="menu" />
                </label>

                <RadzenLabel Text="BlissLobby" />
            </RadzenStack>
        </RadzenHeader>
        <RadzenSidebar Class="my-custom-sidebar">
            <RadzenPanelMenu>
                <RadzenPanelMenuItem Text="Home" Path="/" Icon="home" />
                <RadzenPanelMenuItem Text="Data" Path="/weather" Icon="account_box" />
            </RadzenPanelMenu>
        </RadzenSidebar>
        <RadzenBody>
            <div class="rz-p-4">
                @Body
            </div>
        </RadzenBody>
    </RadzenLayout>
</div>
